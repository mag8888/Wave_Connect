{
    "name": "wave-connect-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev:frontend": "npm run dev --workspace=apps/frontend",
        "build:frontend": "npm run build --workspace=apps/frontend",
        "dev:api": "npm run dev --workspace=apps/api",
        "dev:bot": "npm run dev --workspace=apps/bot",
        "start:api": "npm start --workspace=apps/api",
        "start:bot": "npm start --workspace=apps/bot",
        "dev": "npm run dev:frontend & npm run dev:api & npm run dev:bot"
    }
}